<%- include('../partials/admin/header') %> <%-
include('../partials/admin/sidepanel') %>
<div class="main-panel">
  <div class="content-wrapper">
    <a href="/admin/products/add-product" class="btn btn-primary mb-3"
      >Add Product</a
    >
    <div class="row">
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Product Management</h4>
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>No</th>
                    <th>Product Name</th>
                    <th>Images</th>
                    <th>Category</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Offer in Percentage</th>
                    <th>Offer Price</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (products.length===0) { %>
                  <p class="text-danger">not product added</p>

                  <% } else {%> <% products.forEach((item,i) => { %>

                  <tr>
                    <td><%= i+1 %></td>
                    <td><%= item.productName %></td>
                    <td>
                      <img
                        src="<%= item.images[0] %>"
                        alt=""
                        style="height: 50px; width: 50px; border-radius: 0px"
                      />
                    </td>
                    <td>
                      <% if (item.category && item.category.name ) { %> <%=
                      item.category.name %> <% }else { %> No category <% } %>
                    </td>
                    <td><%= item.quantity %></td>
                    <td><%= item.price %></td>
                    <td style="color: blue;padding-left: 60px;"><%= item.offer %></td>
                    <td style="color: blue;padding-left: 60px;"><%= item.offerPrice %></td>
                    <td>
                      <a
                        href="/admin/products/edit-product?id=<%= item._id %>"
                        class="btn btn-primary"
                        >Edit</a
                      >
                      <a
                        href="/admin/products/delete-product?id=<%= item._id %>"
                        class="btn btn-danger"
                        >Delete</a
                      >
                    </td>
                  </tr>
                  <% }) %> <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/admin/footer') %>
