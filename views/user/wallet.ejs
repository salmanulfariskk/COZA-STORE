<%- include('../partials/user/header') %>
<div class="container custom-container" style="margin-top: 150px; margin-bottom: 100px;">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card custom-card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">My Wallet</h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <h5 class="text-danger">Total Balance : <%= walletAmount %></h5>
                        <!-- <input type="text" class="form-control" id="balance" value="$0.00" readonly> -->
                    </div>
                    <div class="mt-3">
                        <h6>Transaction History</h6> <br>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th scope="col">Date</th>
                                        <th scope="col">Description</th>
                                        <th scope="col">Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% walletHistory.forEach(data => { %>
                                        <tr>
                                            <td><%= data.date.toLocaleDateString() %></td>
                                            <td><%= data.description %></td>
                                            <td><%= data.amount %></td>
                                        </tr>
                                    <% }) %>
                                 
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/user/footer') %>
