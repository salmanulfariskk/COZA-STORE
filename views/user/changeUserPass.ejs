                    <span class="input-group-text">
                        <i class="far fa-eye" id="toggleConfirmPassword"></i>
                    </span>
                </div>
            </div>
        </div>

        <div class="row justify-content-end">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Change password</button>
            </div>
        </div>
